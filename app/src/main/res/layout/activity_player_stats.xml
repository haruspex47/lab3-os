<!-- activity_player_stats.xml -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <Button
        android:id="@+id/buttonCls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFE45E"
        android:fontFamily="@font/zerocool"
        android:text="@string/logout"
        android:textSize="20sp"
        android:layout_gravity="right"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="40dp"/>

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/zerocool"
        android:textSize="25sp"
        android:textColor="@color/argblue"
        android:textStyle="bold"
        android:layout_marginBottom="30dp" />

    <TextView
        android:id="@+id/playerStatsTableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/zerocool"
        android:textSize="15sp"
        android:textColor="@color/argblue"
        android:breakStrategy="simple"
        android:hyphenationFrequency="full"
        android:layout_marginBottom="60dp" />

<!--    <androidx.recyclerview.widget.RecyclerView   -->
<!--        android:id="@+id/playerStatsRecyclerView"-->
<!--        android:layout_width="match_parent"      -->
<!--        android:layout_height="match_parent"     -->
<!--        android:padding="16dp" />                -->

    <TextView
        android:id="@+id/bestPlayerTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/zerocool"
        android:textColor="@color/cyclamen"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/topPlayerStatsTableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/zerocool"
        android:textColor="@color/cyclamen"
        android:textSize="15sp"
        android:breakStrategy="simple"
        android:hyphenationFrequency="full" />

</LinearLayout>
