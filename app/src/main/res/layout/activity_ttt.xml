<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <TextView
        android:id="@+id/currentPlayerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/zerocool"
        android:text="Ожидается подключение второго игрока..."
        android:textColor="#FF6392"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Добро пожаловать!"
        android:fontFamily="@font/zerocool"
        android:textColor="#FF6392"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/currentPlayerTextView"
        app:layout_constraintTop_toBottomOf="@id/currentPlayerTextView" />

    <ImageView
        android:id="@+id/circleImageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/circle"
        app:layout_constraintStart_toStartOf="@id/welcomeTextView"
        app:layout_constraintTop_toBottomOf="@id/welcomeTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/zerocool"
        android:text="Player 1"
        android:textSize="30dp"
        app:layout_constraintStart_toEndOf="@id/circleImageView"
        app:layout_constraintTop_toTopOf="@id/circleImageView" />

    <include
        layout="@layout/buttons_ttt"
        android:id="@+id/buttonsLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/welcomeTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.244" />

    <ImageView
        android:layout_width="60dp"
        android:id="@+id/crossImageView"
        android:layout_height="60dp"
        android:src="@drawable/cross"
        app:layout_constraintStart_toStartOf="@id/buttonsLayout"
        app:layout_constraintTop_toBottomOf="@id/buttonsLayout" />

    <TextView
        android:id="@+id/player2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/zerocool"
        android:text="Player 2"
        android:textSize="30dp"
        app:layout_constraintStart_toEndOf="@id/crossImageView"
        app:layout_constraintTop_toTopOf="@id/crossImageView" />

    <Button
        android:id="@+id/buttonCls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#FFE45E"
        android:fontFamily="@font/zerocool"
        android:text="@string/logout"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/welcomeTextView"
        app:layout_constraintTop_toTopOf="@id/welcomeTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/timerTextView"
        android:layout_height="wrap_content"
        android:fontFamily="@font/zerocool"
        android:text="meme"
        android:textColor="@color/argblue"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@id/player2"
        app:layout_constraintTop_toBottomOf="@id/buttonsLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>

