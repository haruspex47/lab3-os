<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/quizLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/innerTextButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/onemoreinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/currentPlayerTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ожидается подключение \nвторого игрока..."
                android:fontFamily="@font/zerocool"
                android:textColor="#FF6392"
                android:textSize="15sp"
                android:layout_gravity="left"
                android:breakStrategy="simple"/>

            <TextView
                android:id="@+id/welcomeTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/zerocool"
                android:textColor="#FF6392"
                android:textSize="15sp"
                android:text="Добро пожаловать!"
                android:layout_gravity="left"
                android:breakStrategy="simple"/>

        </LinearLayout>

        <Button
            android:id="@+id/buttonCls"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#FFE45E"
            android:fontFamily="@font/zerocool"
            android:text="@string/logout"
            android:textSize="20sp"
            android:layout_gravity="right"
            android:layout_marginLeft="40dp"/>

    </LinearLayout>

    <include
        layout="@layout/quiz_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_gravity="center"/>

</LinearLayout>
