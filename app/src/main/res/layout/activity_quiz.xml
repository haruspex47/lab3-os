<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/quizLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <Button
        android:id="@+id/buttonCls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFE45E"
        android:fontFamily="@font/zerocool"
        android:text="@string/logout"
        android:textSize="20dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="273dp"
        tools:layout_editor_absoluteY="5dp" />


    <TextView
        android:id="@+id/currentPlayerTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ожидается подключение второго игрока..."
        android:fontFamily="@font/zerocool"
        android:textColor="#FF6392"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/welcomeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/zerocool"
        android:textColor="#FF6392"
        android:textSize="10sp"
        android:text="Добро пожаловать!" />

    <include
        layout="@layout/quiz_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp" />

</LinearLayout>
